{
    "require": {
        "illuminate/contracts": "^11.0||^12.0",
        "illuminate/support": "^11.0||^12.0",
        "php": "^8.3"
    },
    "require-dev": {
        "laravel/pint": "^1.26",
        "pestphp/pest": "^4.2",
        "phpstan/phpstan": "^2.1",
        "rector/rector": "^2.2",
        "symplify/monorepo-builder": "^11.2"
    },
    "replace": {
        "timeseries-php/core": "self.version",
        "timeseries-php/influxdb2-driver": "self.version",
        "timeseries-php/laravel-bridge": "self.version",
        "timeseries-php/rrd-driver": "self.version"
    },
    "autoload": {
        "psr-4": {
            "\\TimeseriesPhp\\Bridge\\Laravel\\": "packages/laravel-bridge/src",
            "\\TimeseriesPhp\\Core\\": "packages/core/src",
            "\\TimeseriesPhp\\Driver\\InfluxDB2\\": "packages/influxdb2-driver/src",
            "\\TimeseriesPhp\\Driver\\RRD\\": "packages/rrd-driver/src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": [
                "packages/core/tests/",
                "packages/influxdb2-driver/tests/",
                "packages/laravel-bridge/tests/",
                "packages/rrd-driver/tests/"
            ]
        }
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "extra": {
        "laravel": {
            "aliases": {
                "TSDB": "TimeseriesPhp\\Bridge\\Laravel\\Facade"
            },
            "providers": [
                "TimeseriesPhp\\Bridge\\Laravel\\ServiceProvider"
            ]
        }
    },
    "scripts": {
        "lint": "pint",
        "refactor": "rector",
        "test:type-coverage": "pest --type-coverage --exactly=100",
        "test:typos": "peck",
        "test:lint": "pint --test",
        "test:unit": "pest --coverage --exactly=100",
        "test:types": "phpstan",
        "test:refactor": "rector --dry-run",
        "test": [
            "@test:lint",
            "@test:type-coverage",
            "@test:typos",
            "@test:unit",
            "@test:types",
            "@test:refactor"
        ],
        "cleanup": [
            "@refactor",
            "@lint"
        ]
    }
}
